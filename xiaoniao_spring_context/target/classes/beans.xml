<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
<!--spring 中只要标注了这里@vomponet @repository @controller @ Service 会自动扫描到容器中-->
    <context:component-scan base-package="src"></context:component-scan>
    <bean id="person" class="src">
    <property name="name" value="xiaoniao"></property>
    <property name="address" value="chengdu"></property>
    </bean>

</beans>
